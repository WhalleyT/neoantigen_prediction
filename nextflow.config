params {
  // Pipeline Options

  // Genome and annotation
  gtf = "genomes/mouse/annotation.gtf"
  fasta = "genomes/mouse/genome.fa"

  // Library
  strand = "unstranded"
  reads = 'single_end/*.fastq'
  pair = "single"

  // Clipping
  clip_r1 = 0
  clip_r2 = 0
  tp_clip_r1 = 0
  tp_clip_r2 = 0

  // General
  outdir = './results'
  help = false
  profile = "standard"

  // Alignment
  star_index = false
  save_ref = false

  execution{
    queue_size = 15
  }
}

profiles {                                                                                                                                                                                                              
  standard {
    cpus = 1                                                                                                  
    process.executor = "local" 
    withLabel:multithreaded {                                                                               
      cpus = 4                                                                               
      }
  }
  
  slurm {                                                                                                     
    process {                                                                                                 
      executor = "slurm"                                                                                      
      queue = "htc"                                                                                           
      time = "24h"                                                                                            
      cpus = 1                                                                                                
      withLabel:multithreaded {
        cpus = 20                                                                                             
      }
    }
    executor {                                                                                                
      queueSize = "${params.execution.queue_size}"                                                            
    }                                                                                                         
  }

  conda {
    process.conda = "$baseDir/environment.yml"
  }

  docker {
    docker.enabled = true
    process.container = "twhalley93/neoantigen:latest"
  }

  singularity {
    singularity.enabled = true
    process.container = "docker://twhalley93/neoantigen:latest"
  }   
}
 
